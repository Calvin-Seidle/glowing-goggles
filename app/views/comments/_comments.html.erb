<hr><div class="container">
	<h3>Comments</h3>

	<% commentable.comments.each do |comment| %>
		<div class="well">
			<a href="/users/<%= comment.user.id %>"><%= comment.user.name %> <%= comment.user.surname %></a>   |
			<%= comment.body %> | 
			<%= comment.created_at.strftime("%d %b %Y at %H:%M") %>
		</div>
	<% end %>
</div>