<div class="container">
  <div class="row">
    <h3>Users</h3>
    <div class="column">
      <table class="table">
        <tbody>
          <% @users.each do |user| %>
            <tr class="well">
              <td><a href="/users/<%= user.id %>"><%= user.name %> <%= user.surname %></a></td>
              <td><%= link_to user.email, user %></td>    
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
