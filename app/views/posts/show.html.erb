<!-- Page Content -->
<div class="container">

    <!-- Page Heading/Breadcrumbs -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header"><%= @post.title %>
                <small>by <a href="#"><a href="/users/<%= @post.user.id %>"><%= @post.user.name %> <%= @post.user.surname %></a></a>
                </small>
            </h1>
            <ol class="breadcrumb">
                <li><%= link_to 'Home', root_path %>
                </li>
                <li class="active">Blog Post</li>
            </ol>
        </div>
    </div>
    <!-- /.row -->

    <!-- Content Row -->
    <div class="row">

        <!-- Blog Post Content Column -->
        <div class="col-lg-8">

            <!-- Blog Post -->

            <hr>

            <!-- Date/Time -->
            <p><i class="fa fa-clock-o"></i> Posted on <%= @post.created_at.strftime("%d %b %Y at %H:%M") %></p>

            <hr>

            <!-- Preview Image -->
              <% if @post.image? %>
                  <%= image_tag @post.image.url(:large), class: "img-responsive post-image" %>
                  <span class="text-muted"><%= @post.caption %></span>
                  <hr>
              <% end %>

            
            <!-- Post Content -->
            <p class="lead"><%= @post.body %></p>
            

            <hr>

            <!-- Blog Comments -->

            <!-- Comments Form -->
            <div class="well">
                <h4>Leave a Comment:</h4>
                <%= render partial: "comments/form", locals: {commentable: @post} %>
            </div>

            <hr>

            <!-- Posted Comments -->
            <%= render partial: "comments/comments", locals: {commentable: @post} %>
            
        </div>
    </div>
    <!-- /.row -->
    <% if current_user == @post.user %>
	<%= link_to 'Edit', edit_post_path(@post) %> |
<% end %>
<%= link_to 'Back', posts_path %>
</div>
<!-- /.container -->
